{
  "name": "splitting-webpack",
  "version": "0.0.2",
  "author": "narcilee7",
  "description": "A project for deeply learning webpack.",
  "type": "module",
  "bin": {
    "splitting-webpack": "./bin/packer.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc -p tsconfig.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/narcilee7/splitting-webpack.git"
  },
  "keywords": [
    "bundler",
    "webpack",
    "typescript"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/narcilee7/splitting-webpack/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://github.com/narcilee7/splitting-webpack#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "crypto": "^1.0.1",
    "ws": "^8.17.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/node": "^20.12.12",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "core": "link:@types/@babel/core",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
